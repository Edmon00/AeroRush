<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:background="#75CBF8"
        android:textSize="64sp"
        android:textColor="#000000"
        android:id="@+id/play"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"/>

    <!-- Login Button (Top Left) -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape2"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:id="@+id/LoginSIgnup"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- High Score Text (Top Right) -->
    <TextView
        android:id="@+id/highScoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score: 0"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- High Level Text (Below High Score) -->
    <TextView
        android:id="@+id/highLevelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Level: 1"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/highScoreTxt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"/>

    <!-- Last Level Text (Below High Level) -->
    <TextView
        android:id="@+id/LastLevelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Level: 1"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/highLevelTxt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"/>

    <!-- Volume Button (Bottom Left) -->
    <ImageButton
        android:id="@+id/btnVolume"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape5"
        android:contentDescription="none"
        android:src="@drawable/baseline_volume_up_24"
        android:text="Volume" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aero Rush"
        android:textColor="#2626BA"
        android:textSize="48sp"
        android:layout_above="@id/play"
        android:layout_centerHorizontal="true"

      />

    <Button
        android:id="@+id/Leaderboard_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="310dp"
        android:layout_marginLeft="628dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/Yellow"
        android:contentDescription="none"
        android:text="Liders" />


</RelativeLayout>
